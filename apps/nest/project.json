{
  "name": "nest",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nest/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "nest:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "nest:build:development"
        },
        "production": {
          "buildTarget": "nest:build:production"
        }
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prettier --config apps/nest/.prettierrc --write apps/nest/src/**/*.{ts,tsx,js,jsx,json,css,scss,md}"
      }
    }
  }
}
